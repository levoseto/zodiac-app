<?xml version = "1.0" encoding = "UTF-8" ?>
<Application x:Class="ZodiacApp.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ZodiacApp"
             xmlns:converters="clr-namespace:ZodiacApp.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:BytesToStringConverter x:Key="BytesToStringConverter" />
            <converters:PercentToDecimalConverter x:Key="PercentToDecimalConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>