# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/zodiac-updater?retryWrites=true&w=majority

# Puerto del servidor (Vercel lo asigna automáticamente)
PORT=3000

# Configuración de la aplicación
APP_NAME=Zodiac App Updater
NODE_ENV=production

# Configuración de seguridad (opcional)
JWT_SECRET=your_jwt_secret_here
ADMIN_PASSWORD=your_admin_password_here

# Configuración Cloudinary
CLOUDINARY_CLOUD_NAME=cloud-name-aqui
CLOUDINARY_API_KEY=tu-api-key-aqui
CLOUDINARY_API_SECRET=tu-secret-aqui

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=AKIA...tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key_muy_largo
AWS_REGION=us-east-1
S3_BUCKET_NAME=zodiac-app-apks-tu-nombre